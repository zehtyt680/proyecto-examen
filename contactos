    }                                              

    private void jList1MouseClicked(java.awt.event.MouseEvent evt) {                                    
        // TODO add your handling code here:
        valor = jList1.getSelectedValue().toString();
        posicion=jList1.getSelectedIndex();
        System.out.println("Valor Item"+valor);

        String[] elemento = valor.split("");
        nombre = elemento[0];
        ciudad = elemento[1];
        telefono = elemento[2];
        correo = elemento[3];
        jTextNombre.setText(nombre);
        jTextDireccion.setText(ciudad);
        jTextTelefono.setText(telefono);
        jTextCorreo.setText(correo);
    }                                   

    private void jfGuardarActionPerformed(java.awt.event.ActionEvent evt) {                                          

        // TODO add your handling code here:
        jList1.setModel(model);
        model.addElement(jTextNombre.getText()+' '+jTextDireccion.getText()+' '+jTextTelefono.getText()
            +' '+jTextCorreo.getText());
        jTextNombre.setText(" ");
        jTextDireccion.setText(" ");
        jTextTelefono.setText(" ");
        jTextCorreo.setText(" ");
        jTextNombre.requestFocus();

    }                                         

    private void jfActualizarActionPerformed(java.awt.event.ActionEvent evt) {                                             
        // boton actualizar
        valor = jTextNombre.getText()+' '+jTextDireccion.getText()+' '+jTextTelefono.getText()+' '+jTextCorreo.getText();

        model.set(posicion,valor);
    }                                            

    private void jfEliminarActionPerformed(java.awt.event.ActionEvent evt) {                                           
        // boton eliminar
        model.remove(posicion);
    }                                          

    private void SalirActionPerformed(java.awt.event.ActionEvent evt) {                                      
        // boton salir
        this.hide();
    }                                     


